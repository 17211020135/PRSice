#ifndef SNP_H
#define SNP_H

#include <string>
#include <fstream>
#include <boost/ptr_container/ptr_vector.hpp>
#include "usefulTools.h"

class SNP
{
    public:
        SNP();
        SNP(std::st);
        virtual ~SNP();
        static void read_snp(const std::string c_input_file, boost::ptr_vector<SNP> &snp_list);
        std::string get_ref() { return m_ref; }
        std::string get_alt() { return m_alt; }
        std::string get_rs_id() { return m_rs_id; }
        std::string get_chr() { return m_chr; }
        size_t get_loc() { return m_loc; }
        double set_stat() { return m_stat; }
        double get_p_value() { return m_p_value; }
    protected:
    private:
        std::string m_ref;
        std::string m_alt;
        std::string m_rs_id;
        std::string m_chr;
        size_t m_loc;
        double m_stat;
        double m_p_value;
};

#endif // SNP_H
